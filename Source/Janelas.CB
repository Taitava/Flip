    Function StopWindowMoving(id)
        If Not WindowExists(id) Then
            WINDOW_DOES_NOT_EXIST = True
            Return False
        End If
        
        If id = ALL_WINDOWS Then
            For i = 1 To WindowsNoMax
                StopWindowMoving(i)
