    Function SetWindowScrollable(wID, w=0,h=0, Scrollbar=0)
        If Not WindowExists(wID) Then
            WINDOW_DOES_NOT_EXIST = True
            Return False
        End If
        
        If w<>0 And h<>0 Then
            WindowFieldW(wID) = w
            WindowFieldH(wID) = h
            WindowFieldScrollbar(wID) = Scrollbar
