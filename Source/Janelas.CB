    End Function
    
    Function ChangeWindowTitle(id, r,g,b, fontti=0, otsikko$="")
        //Muuttaa ikkunan otsikon väriä, muotoilua ja tekstiä
        //ALL_WINDOWS-vakiolla muutetaan vain oletusväriä
        
        If id <> ALL_WINDOWS Then
